<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5d6d7" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/shareImageView"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="220dp"
            android:background="@drawable/p_share_success_bg_bg" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/p_share_success_bg_bg_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp" >

            <ImageView
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/p_share_success_logo"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/exitBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/p_common_exit" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/p_share_success_bg" >

            <LinearLayout
                android:id="@+id/topLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="1px"
                    android:layout_marginRight="5dp"
                    android:background="#5c6365" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pano_share_and_share_the_joy_with"
                    android:textColor="#5c6365"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:background="#5c6365" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/centerShareLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/facebookBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/p_share_facebook_white" />

                <ImageView
                    android:id="@+id/twitterBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/p_share_twitter_white" />

                <ImageView
                    android:id="@+id/instagramBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/p_share_instagram_white" />

                <ImageView
                    android:id="@+id/flikrBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/p_share_flickr_white" />
            </LinearLayout>

            <Button
                android:id="@+id/finishBtn"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/p_btn_bg"
                android:text="@string/pano_edit_profile_done"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>