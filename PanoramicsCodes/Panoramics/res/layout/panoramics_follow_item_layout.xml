<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/p_pcenter_header_bg" >

            <f.com.panoramics.view.CircleImageView
                android:id="@+id/headerImageView"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/headerLayout"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nicknameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3f484b"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bioTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#94989a"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/followerBtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <include layout="@layout/p_l_full15line" />

</LinearLayout>