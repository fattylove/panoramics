<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/title_bg_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/popoLine"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/selfBtn"
        android:layout_width="50dp"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:background="@drawable/p_home_title_user"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/titleImageView"
            android:layout_width="120dp"
            android:layout_height="14dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/p_home_title_logo" />

        <LinearLayout
            android:id="@+id/titleContentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/topSelectImageView"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Hot"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/titleArrImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/p_home_title_bottom_arr" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/camBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/p_home_title_camare"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

</RelativeLayout>