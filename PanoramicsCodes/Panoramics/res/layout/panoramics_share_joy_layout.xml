<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/shareFacebook"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/p_share_facebook_white" />

    <ImageView
        android:id="@+id/shareTwitter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/p_share_twitter_white" />

    <ImageView
        android:id="@+id/shareFlikr"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/p_share_flickr_white" />

</LinearLayout>